{% 
  set linkList = [
    {'text': 'Home','url': '/'},
    {'text': 'About','url': '/about/'},
    {'text': 'Blog','url': '/blog/'},
    {'text': 'Projects','url': '/projects/'},
    {'text': 'Contact','url': '/contact/'},
    {'text': 'Events','url': '/events/'}
  ] 
%}

<nav class="max-h-fit max-w-fit">
  <ul class="flex p-7 gap-4 under items-center w-full h-full  text-gray-300 ">
    {% for link in linkList  %}
      <li class="hover:text-purple-600">
        <a class="{{ 'underline underline-offset-2' if link.url === page.url }}" href="{{ link.url }}">{{ link.text }}</a>
      </li>  
    {% endfor %}
  </ul>
</nav>